
{% set publish_time = post.publish_time|date('Y-m-d H:i:s')|format_datetime('short', 'short') %}

<div>
{{ post.text|markdown }}
</div>

        {% import view('/component/macro.html.twig') as helper %}
{% set gallery_id = 'g-' ~ post.post_id %}
{% if post.images_hd %}
    {% for image in post.images_hd %}
        {{ image.media }}
            {{ helper.thumb(image, null, 'default') }}
    {% endfor %}
{% endif %}

<div class="font-light text-right">
{% set postUrl = 'https://www.facebook.com/' ~ pageId ~ '/posts/' ~ post.post_id %}


{% set icon = svg('comments', {'class': 'fill-current inline-block', 'width': '1em'}) %}
{{ link(icon ~ ' ' ~ post.comment_number, postUrl) }} |

{% set icon = svg('thumbs-up', {'class': 'fill-current inline-block', 'width': '1em'}) %}
{{ link(icon ~ ' ' ~ post.like_number, postUrl) }} |


{% set icon = svg('clock', {'class': 'fill-current inline-block', 'width': '1em'}) %}
{{ link(icon ~ ' ' ~ publish_time, postUrl) }}
</div>